    <!-- 最新版本的 Bootstrap 核心 CSS 文件 -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <style type="text/css">
      .marin10 {
        margin-right: 10px;
      }
    </style>
    <title><%= blog.title %></title>
  </head>
  <body>
  	<div class="container">
