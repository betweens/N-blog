<%- include('../layout/header') %>
    <form id="create-form" method="post" action="/posts/<%= post._id %>/edit">
		  <div class="form-group">
		    <label for="posts-title">标题</label>
		    <input type="text" class="form-control" id="posts-title" name="title" placeholder="用户名" value="<%= post.title %>">
		  </div>

		  <div class="form-group">
		  	<label for="posts-content">内容</label>
		  	<textarea class="form-control" rows="10" id="posts-content" name="content"><%= post.content %></textarea>
		  </div> 
		  <button type="submit" class="btn btn-success btn-lg btn-block">发布</button>
		</form>
<%- include('../layout/footer') %>